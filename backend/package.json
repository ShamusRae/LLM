{
  "name": "llm-chat-backend",
  "version": "1.0.0",
  "description": "Backend for multi-person chat interface with multiple LLM integrations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "controllers/**/*.js",
      "models/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.37.0",
    "@modelcontextprotocol/sdk": "^1.6.0",
    "axios": "^1.8.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "limiter": "^3.0.0",
    "mammoth": "^1.9.0",
    "marked": "^15.0.6",
    "mongoose": "^8.11.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "ollama": "^0.5.13",
    "openai": "^4.84.0",
    "pdf-parse": "^1.1.1",
    "undici": "^6.21.1",
    "yahoo-finance2": "^2.13.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.3"
  }
}
