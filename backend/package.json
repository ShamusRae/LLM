{
  "name": "llm-chat-backend",
  "version": "1.0.0",
  "description": "Backend for LLM Chat Application with Professional Consulting Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "db:setup": "node scripts/setup-database.js setup",
    "db:health": "node scripts/setup-database.js health",
    "consulting:init": "npm run db:setup && npm run start",
    "consulting:dev": "npm run db:setup && npm run dev"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "controllers/**/*.js",
      "models/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.37.0",
    "@modelcontextprotocol/sdk": "^1.6.0",
    "axios": "^1.8.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "limiter": "^3.0.0",
    "mammoth": "^1.9.0",
    "marked": "^15.0.6",
    "mongoose": "^8.11.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "ollama": "^0.5.13",
    "openai": "^4.84.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "redis": "^5.6.0",
    "undici": "^6.21.1",
    "ws": "^8.18.3",
    "yahoo-finance2": "^2.13.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  }
}
